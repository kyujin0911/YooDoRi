<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="view"
            type="kr.ac.tukorea.whereareu.presentation.nok.home.NokHomeFragment" />

        <variable
            name="viewModel"
            type="kr.ac.tukorea.whereareu.presentation.nok.home.NokHomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="10dp"
        android:padding="16dp"
        android:id="@+id/layout">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/icon_layout"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/oval_marker_green"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="예측 장소"
                        android:gravity="center"
                        android:textAppearance="@style/TextAppearance.App.12sp.SemiBold"
                        android:textColor="@color/gray80"
                        android:layout_marginStart="4dp"/>
                    <ImageView
                        android:layout_marginStart="4dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/oval_marker_yellow"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="의미 장소"
                        android:gravity="center"
                        android:textAppearance="@style/TextAppearance.App.12sp.SemiBold"
                        android:textColor="@color/gray80"
                        android:layout_marginStart="4dp"/>
                    <ImageView
                        android:layout_marginStart="4dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/oval_marker_blue"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="인근 경찰서"
                        android:gravity="center"
                        android:textAppearance="@style/TextAppearance.App.12sp.SemiBold"
                        android:textColor="@color/gray80"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>

                <!--TextView
                    android:id="@+id/predict_location_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="예측 장소"
                    android:textAppearance="@style/TextAppearance.App.16sp.ExtraBold"
                    app:layout_constraintTop_toBottomOf="@id/icon_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="12dp"
                    />

                <LinearLayout
                    android:id="@+id/map_view_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/predict_location_title"
                    app:layout_constraintBottom_toBottomOf="@id/predict_location_title">
                    <TextView
                        android:id="@+id/map_view_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="지도로 보기"
                        android:textColor="@color/blue"
                        android:textAppearance="@style/TextAppearance.App.14sp.SemiBold" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="4dp"
                        android:src="@drawable/ic_arrow_back_24"
                        android:scaleX="-1"
                        app:tint="@color/gray60"/>
                </LinearLayout-->

                <TextView
                    android:id="@+id/predict_location_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="의미 장소"
                    android:textAppearance="@style/TextAppearance.App.16sp.ExtraBold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/icon_layout" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@id/predict_location_title_tv"
                    tools:listitem="@layout/item_meaningful_place" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>