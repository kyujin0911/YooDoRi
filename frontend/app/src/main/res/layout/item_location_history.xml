<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="model"
            type="kr.ac.tukorea.whereareu.domain.history.LocationHistory" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp">

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{model.time}"
            tools:text="00:00:00"
            android:textAppearance="@style/TextAppearance.App.12sp.regular"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/user_status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{model.userStatus}"
            tools:text="도보"
            android:textAppearance="@style/TextAppearance.App.12sp.regular"
            app:layout_constraintEnd_toEndOf="@id/time_tv"
            app:layout_constraintTop_toBottomOf="@id/time_tv"
            android:layout_marginTop="8dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>