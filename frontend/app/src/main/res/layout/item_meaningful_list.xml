<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="kr.ac.tukorea.whereareu.domain.home.MeaningfulPlaceInfo" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="12dp">

        <ImageView
            android:id="@+id/icon_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_meaning_place"
            app:tint="@color/yellow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/address_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="@{model.address}"
            android:layout_marginStart="12dp"
            android:textAppearance="@style/TextAppearance.App.16sp.ExtraBold"
            android:gravity="start"
            app:layout_constraintTop_toTopOf="@id/icon_iv"
            app:layout_constraintBottom_toBottomOf="@id/icon_iv"
            app:layout_constraintStart_toEndOf="@id/icon_iv"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.App.14sp.Regular"
            app:layout_constraintStart_toStartOf="@id/address_tv"
            app:layout_constraintTop_toBottomOf="@id/address_tv"
            tools:text="요일" />

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.App.14sp.Regular"
            app:layout_constraintStart_toEndOf="@id/date_tv"
            app:layout_constraintBaseline_toBaselineOf="@id/date_tv"
            tools:text="16시~20시" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/inner_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/icon_iv"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>