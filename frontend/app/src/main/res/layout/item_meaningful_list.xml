<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="model"
            type="kr.ac.tukorea.whereareu.domain.home.MeaningfulPlaceInfo" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="12dp">

        <ImageView
            android:id="@+id/icon_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_meaning_place"
            app:tint="@color/yellow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/address_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="@{model.address}"
            android:layout_marginStart="12dp"
            android:textAppearance="@style/TextAppearance.App.16sp.ExtraBold"
            android:gravity="start"
            app:layout_constraintTop_toTopOf="@id/icon_iv"
            app:layout_constraintBottom_toBottomOf="@id/icon_iv"
            app:layout_constraintStart_toEndOf="@id/icon_iv"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/police_station_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인근 경찰서"
            android:layout_marginStart="8dp"
            android:visibility="@{model.isExpanded ? View.VISIBLE : View.GONE}"
            android:textAppearance="@style/TextAppearance.App.16sp.ExtraBold"
            app:layout_constraintTop_toTopOf="@id/more_view_btn"
            app:layout_constraintBottom_toBottomOf="@id/more_view_btn"
            app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout
            android:id="@+id/more_view_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/address_tv"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='@{model.isExpanded ? "접기" : "인근 경찰서 정보 보기" }'
                android:textAppearance="@style/TextAppearance.App.14sp.ExtraBold"
                android:textColor="@color/blue"
                />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="4dp"
                android:src="@{model.isExpanded ? @drawable/ic_arrow_up_24 : @drawable/ic_arrow_down_24}"
                app:tint="@color/gray60"
                />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/inner_rv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"
            android:visibility="@{model.isExpanded ? View.VISIBLE : View.GONE}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/more_view_btn"
            app:layout_constraintStart_toStartOf="@id/police_station_title_tv"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/inner_police_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"
            android:visibility="@{model.isExpanded ? View.VISIBLE : View.GONE}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/inner_rv"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>