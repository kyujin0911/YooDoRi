<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="view"
            type="kr.ac.tukorea.whereareu.presentation.nok.setting.updateTime.SettingUpdateTimeFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rectangle_corner_10_white"
        android:padding="24dp">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{() -> view.onClickBackBtn()}"
            android:src="@drawable/ic_arrow_back_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/guide_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="보호대상자 위치 업데이트 주기를 설정해주세요."
            android:textAppearance="@style/TextAppearance.App.18sp.ExtraBold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/back_btn"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/update_time_list"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="40dp"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@+id/guide_tv"
            app:layout_constraintBottom_toTopOf="@+id/finish_btn"/>

        <Button
            android:id="@+id/finish_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.App.DialogButton"
            android:textSize="14sp"
            android:text="변경"
            android:layout_marginBottom="32dp"
            android:background="@drawable/rectangle_corner_10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>