<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="model"
            type="kr.ac.tukorea.whereareu.domain.home.MeaningfulPlaceInfo" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp">

        <ImageView
            android:id="@+id/icon_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_meaning_place"
            app:layout_constraintBottom_toBottomOf="@id/address_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/address_tv"
            app:tint="@color/yellow" />

        <TextView
            android:id="@+id/address_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:gravity="start"
            android:text="@{model.address}"
            android:textAppearance="@style/TextAppearance.App.16sp.ExtraBold"
            app:layout_constraintBottom_toTopOf="@id/map_view_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/icon_iv"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="주소" />

        <TextView
            android:id="@+id/map_view_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:text="지도로 보기"
            android:textAppearance="@style/TextAppearance.App.14sp.SemiBold"
            android:textColor="@color/blue"
            app:layout_constraintEnd_toStartOf="@id/map_view_iv"
            app:layout_constraintTop_toBottomOf="@id/address_tv" />

        <ImageView
            android:id="@+id/map_view_iv"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="4dp"
            android:scaleX="-1"
            android:src="@drawable/ic_arrow_back_24"
            app:layout_constraintBottom_toBottomOf="@id/map_view_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/map_view_btn"
            app:tint="@color/gray60" />

        <TextView
            android:id="@+id/info_view_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="4dp"
            android:text="정보 보기"
            android:textAppearance="@style/TextAppearance.App.14sp.SemiBold"
            android:textColor="@color/blue"
            app:layout_constraintEnd_toStartOf="@id/info_view_iv"
            app:layout_constraintTop_toBottomOf="@id/map_view_btn" />

        <ImageView
            android:id="@+id/info_view_iv"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="4dp"
            android:scaleX="-1"
            android:src="@drawable/ic_arrow_back_24"
            app:layout_constraintBottom_toBottomOf="@id/info_view_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/info_view_btn"
            app:tint="@color/gray60" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>