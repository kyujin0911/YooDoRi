    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_type_tv"
            android:text="보호자"
            android:textAppearance="@style/TextAppearance.App.24sp.ExtraBold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/nok_cardView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="80dp"
            android:backgroundTint="@color/yellow"
            app:cardCornerRadius="120dp"
            app:cardElevation="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_nok" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_name_tv"
            tools:text="박승호"
            android:text=""
            android:textAppearance="@style/TextAppearance.App.24sp.ExtraBold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nok_cardView"
            android:layout_marginTop="20dp"
            />

        <ImageView
            android:id="@+id/update_user_info_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow_back_24"
            android:scaleX="-1"
            app:layout_constraintStart_toEndOf="@+id/user_name_tv"
            app:layout_constraintTop_toTopOf="@+id/user_name_tv"
            app:layout_constraintBottom_toBottomOf="@+id/user_name_tv"
            android:layout_marginStart="10dp"
            />

        <TextView
            android:id="@+id/user_phone_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=""
            android:textAppearance="@style/TextAppearance.App.16sp.SemiBold"
            app:layout_constraintStart_toStartOf="@+id/user_name_tv"
            app:layout_constraintEnd_toEndOf="@+id/user_name_tv"
            app:layout_constraintTop_toBottomOf="@+id/user_name_tv"
            tools:text="000-0000-0000" />

