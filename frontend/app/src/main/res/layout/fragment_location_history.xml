<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="kr.ac.tukorea.whereareu.presentation.nok.history.LocationHistoryViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/calendar_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rectangle_corner_10"
            android:backgroundTint="@color/yellow"
            android:padding="6dp"
            android:gravity="center"
            android:elevation="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="날짜 선택"
                android:layout_marginTop="2dp"
                android:textAppearance="@style/TextAppearance.App.12sp.SemiBold"
                android:textColor="@color/white"
                android:gravity="center"
                android:drawablePadding="1dp"
                android:drawableTop="@drawable/ic_calendar_month_24"/>
        </LinearLayout>

        <TextView
            android:id="@+id/date_tv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:text="2024년 3월 24일, 화요일"
            android:padding="8dp"
            android:textAppearance="@style/TextAppearance.App.24sp.Bold"
            app:layout_constraintStart_toEndOf="@id/calendar_btn"
            app:layout_constraintTop_toTopOf="@id/calendar_btn"
            app:layout_constraintBottom_toBottomOf="@id/calendar_btn"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray20"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/date_tv"/>


        <SeekBar
            android:id="@+id/seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="4dp"
            android:max="@{viewModel.maxProgress}"
            android:progressDrawable="@drawable/seekbar"
            android:splitTrack="false"
            android:thumb="@drawable/seekbar_thumb"
            app:layout_constraintTop_toBottomOf="@id/next" />

        <ImageView
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_arrow_right_white_24"
            app:layout_constraintEnd_toEndOf="@id/seek_bar"
            app:layout_constraintTop_toBottomOf="@id/calendar_btn"
            app:tint="@color/black" />

        <ImageView
            android:id="@+id/previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="-1"
            android:src="@drawable/ic_arrow_right_white_24"
            app:layout_constraintBottom_toBottomOf="@id/next"
            app:layout_constraintEnd_toStartOf="@id/next"
            app:layout_constraintTop_toTopOf="@id/next"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/movement_detail_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상세 이동"
            android:layout_marginEnd="8dp"
            android:textAppearance="@style/TextAppearance.App.14sp.SemiBold"
            app:layout_constraintBottom_toBottomOf="@id/next"
            app:layout_constraintEnd_toStartOf="@id/previous"
            app:layout_constraintTop_toTopOf="@id/next" />

        <TextView
            android:id="@+id/timeInfo_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시간"
            android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.05"
            android:textAppearance="@style/TextAppearance.App.12sp.SemiBold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/seek_bar"/>

        <TextView
            android:id="@+id/movement_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이동상태"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.App.12sp.SemiBold"
            app:layout_constraintStart_toStartOf="@id/timeInfo_title_tv"
            app:layout_constraintTop_toBottomOf="@id/timeInfo_title_tv"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:overScrollMode="never"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/seek_bar"
            app:layout_constraintStart_toEndOf="@id/movement_title_tv"
            tools:listitem="@layout/item_location_history" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>