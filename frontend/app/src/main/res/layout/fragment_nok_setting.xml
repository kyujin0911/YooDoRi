<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="view"
            type="kr.ac.tukorea.whereareu.presentation.nok.setting.NokSettingFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="24dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/nok_cardView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="80dp"
            android:backgroundTint="@color/yellow"
            app:cardCornerRadius="120dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_nok" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/user_info_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nok_cardView">

            <TextView
                android:id="@+id/user_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="보호자"
                android:textAppearance="@style/TextAppearance.App.24sp.ExtraBold" />

            <TextView
                android:id="@+id/user_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text=""
                android:textAppearance="@style/TextAppearance.App.24sp.Bold"
                tools:text="박승호" />

        </LinearLayout>

        <TextView
            android:id="@+id/user_phone_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=""
            android:textAppearance="@style/TextAppearance.App.16sp.SemiBold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_info_layout"
            tools:text="000-0000-0000" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/other_user_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rectangle_corner_10_white"
            android:elevation="4dp"
            android:paddingStart="20dp"
            android:paddingTop="30dp"
            android:paddingEnd="20dp"
            android:paddingBottom="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_phone_number_tv">

            <TextView
                android:id="@+id/other_user_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="보호대상자"
                android:textAppearance="@style/TextAppearance.App.14sp.ExtraBold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/other_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text=""
                android:textAppearance="@style/TextAppearance.App.14sp.ExtraBold"
                app:layout_constraintBaseline_toBaselineOf="@+id/other_user_type_tv"
                app:layout_constraintStart_toEndOf="@+id/other_user_type_tv"
                tools:text="황순권" />

            <TextView
                android:id="@+id/other_phone_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginTop="5dp"
                android:text=""
                android:textAppearance="@style/TextAppearance.App.14sp.SemiBold"
                app:layout_constraintBaseline_toBaselineOf="@+id/other_name_tv"
                app:layout_constraintStart_toEndOf="@+id/other_name_tv"
                tools:text="010-0000-0000" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rectangle_corner_10_white"
            android:elevation="4dp"
            android:padding="24dp"
            app:layout_constraintTop_toBottomOf="@+id/other_user_info_layout">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/update_user_info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:elevation="8dp"
                android:focusable="true"
                android:onClick="@{() -> view.navigateToModifyUserInfo()}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/update_user_info_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="사용자 정보 변경"
                    android:textAppearance="@style/TextAppearance.App.14sp.ExtraBold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/update_user_info_btn"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="10dp"
                    android:scaleX="-1"
                    android:src="@drawable/ic_arrow_back_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:background="@color/gray60"
                app:layout_constraintBottom_toTopOf="@+id/update_user_info_layout" />

            <View
                android:id="@+id/update_user_info_v"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="15dp"
                android:background="@color/gray60"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/update_user_info_layout" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/update_time_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="@{() -> view.navigateToModifyUpdateTime()}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/update_user_info_v">

                <TextView
                    android:id="@+id/update_time_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="위치 정보 업데이트 주기"
                    android:textAppearance="@style/TextAppearance.App.14sp.ExtraBold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/update_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="1분"
                    android:textAppearance="@style/TextAppearance.App.14sp.SemiBold"
                    app:layout_constraintBaseline_toBaselineOf="@+id/update_time_title"
                    app:layout_constraintStart_toEndOf="@id/update_time_title"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/update_time_btn"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="10dp"
                    android:scaleX="-1"
                    android:src="@drawable/ic_arrow_back_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="15dp"
                android:background="@color/gray60"
                app:layout_constraintTop_toBottomOf="@+id/update_time_layout" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>