<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="model"
            type="kr.ac.tukorea.whereareu.domain.safearea.SafeArea" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp">

        <TextView
            android:id="@+id/area_name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:gravity="start"
            android:text="@{model.areaName}"
            android:textAppearance="@style/TextAppearance.App.16sp.ExtraBold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/area_title_tv"
            tools:text="주소" />

        <TextView
            android:id="@+id/area_title_tv"
            android:text="안심구역 반경"
            android:textAppearance="@style/TextAppearance.App.14sp.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/area_name_tv"
            app:layout_constraintStart_toStartOf="@id/area_name_tv"/>

        <TextView
            android:id="@+id/area_tv"
            android:text='@{model.radius + "km"}'
            android:textAppearance="@style/TextAppearance.App.14sp.SemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@id/area_title_tv"
            app:layout_constraintStart_toEndOf="@id/area_title_tv"/>

        <LinearLayout
            android:id="@+id/map_view_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/area_tv">
            <TextView
                android:id="@+id/map_view_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지도로 보기"
                android:textColor="@color/blue"
                android:textAppearance="@style/TextAppearance.App.14sp.SemiBold" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_arrow_back_24"
                android:scaleX="-1"
                app:tint="@color/gray60"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray20"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/map_view_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>