<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_info_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/rectangle_corner_10_white"
        android:layout_marginTop="100dp"
        android:padding="24dp"
        android:elevation="8dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_profile_iv"
            android:src="@drawable/ic_profile"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_type_tv"
            android:text="보호자"
            android:textAppearance="@style/TextAppearance.App.24sp.ExtraBold"
            app:layout_constraintStart_toEndOf="@+id/user_profile_iv"

            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_name_tv"
            android:text=""
            tools:text="김규진"
            android:textAppearance="@style/TextAppearance.App.20sp.ExtraBold"
            app:layout_constraintStart_toStartOf="@+id/user_type_tv"
            app:layout_constraintTop_toBottomOf="@+id/user_type_tv"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            tools:text="000-0000-0000"
            android:textAppearance="@style/TextAppearance.App.16sp.SemiBold"
            app:layout_constraintStart_toStartOf="@+id/user_type_tv"
            app:layout_constraintTop_toBottomOf="@+id/user_name_tv"
            android:layout_marginTop="5dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/other_user_info"
        app:layout_constraintStart_toStartOf="@id/user_info_layout"
        >

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>